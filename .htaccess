################################################################################
## PHP Options                                                                ##
##                                                                            ##
## Depending on whether or not PHP is an apache module, these may or may not  ##
## be allowed and may need to be configured in a separate php.ini file.       ##
## this is common with shared hosting such as Bluehost.                       ##
##                                                                            ##
################################################################################

	php_flag  register_globals       0
	php_flag  magic_quotes_gpc       0
	php_flag  short_open_tag         0
	php_flag  asp_tags               1
	php_flag  xdebug.profiler_enable 1
	php_value upload_max_filesize    "15M"
	php_value post_max_size          "16M"

################################################################################
## Forbid reading of certain files directly                                   ##
################################################################################

	<Files *.htaccess>
		order allow,deny
		deny from all
	</Files>

	<Files sess_*>
		order allow,deny
		deny from all
	</Files>

################################################################################
## Enable Rewrite                                                             ##
################################################################################

	<IfModule mod_rewrite.c>
		RewriteEngine On
		RewriteBase   /

		RewriteCond	%{DOCUMENT_ROOT}/%{REQUEST_URI} !-f
		RewriteRule	^.*$ includes/init.php [NS,QSA]
	</IfModule>


################################################################################
## GZip plaintext being sent to the user                                      ##
################################################################################

	<IfModule mod_deflate.c>
		SetOutputFilter DEFLATE
		AddOutputFilterByType DEFLATE text/html application/javascript text/css
	</IfModule>
